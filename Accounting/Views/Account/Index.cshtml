@{
}

<div class="container">
    <h1>Customer Name</h1>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>LastName</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in ViewBag.AllCustomer)
            {
                <tr>
                    <td>@customer.Id</td>
                    <td>@customer.Name</td>
                    <td>@customer.LastName</td>
                    <td>@customer.Email</td>
                </tr>
            }
        </tbody>
    </table>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var produce in ViewBag.AllProduct)
            {
                <tr>
                    <td>@produce.Id</td>
                    <td>@produce.Name</td>
                    <td>@produce.Price</td>
                </tr>
            }
        </tbody>

    </table>
</div>